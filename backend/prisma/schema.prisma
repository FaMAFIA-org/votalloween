generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Config {
  id              Int       @id @default(autoincrement())
  phase           String    @default("upload") // "upload" or "voting"
  votingStartTime DateTime?
  votingEndTime   DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Costume {
  id              String   @id @default(uuid())
  participantName String
  costumeName     String?
  imageUrl        String
  deviceId        String
  uploadedAt      DateTime @default(now())
  votes           Vote[]

  @@index([deviceId])
}

model Vote {
  id        String   @id @default(uuid())
  deviceId  String
  costumeId String
  category  String   // "best", "funniest", "most_elaborate", "best_group"
  costume   Costume  @relation(fields: [costumeId], references: [id], onDelete: Cascade)
  votedAt   DateTime @default(now())

  @@unique([deviceId, category])
  @@index([deviceId])
  @@index([costumeId])
  @@index([category])
}
